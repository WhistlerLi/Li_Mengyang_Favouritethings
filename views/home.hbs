<section id="section3" class="panel">
    <h1 class="user-panel-heading">
        My Favourite things!
    </h1>

    <p>
       Coffee Travel and Music
    </p>

    <div class="team">
        <!-- loop through all our team members and put their info on the page -->
        <!-- this is exactly like a forEach loop with plain JS -->
        {{#each  people}}
            <div class="user-panel">
                <img class="u-avatar"  src="images/{{Image}}" alt="avatar">

                <a class="u-link" href="{{ID}}">
                    More
                </a>

        
            </div>
        {{/each}}
        
    </div>
    </div>

    <!-- this will be filled in on the client side when we render our AJAX data -->
    <section class="lightbox">
        <span class="close">x</span>
        <div class="sidebar">
            <img src="" alt=" image">
        </div>

        <div class="lb-content">

        </div>
    </section>
</section>
